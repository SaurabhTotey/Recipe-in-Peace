<div class="container-fluid">
    <% i = 0 %>
    <% @recipes.each do |recipe| %>
      <% if i % 4 == 0 %>
        <div class="row mt-3">
      <% end %>
      <div class="col col-3">
        <div class="rounded recipe-card">
          <a href='<%= recipe_path(recipe) %>'>
            <% if recipe.imageURL %>
              <img class="img-fluid img-thumbnail rounded" src='<%= recipe.imageURL %>' width="100%" height="75%"/>
            <% else %>
              <div></div>
            <% end %>
            <h4><%= recipe.name %></h4>
            <p><%= recipe.description %></p>
          </a>
          <a href='<%= edit_recipe_path(recipe) %>'>Edit</a>
        </div>
      </div>
      <% if i % 4 == 3 %>
        </div>
      <% end %>
      <% i += 1 %>
    <% end %>
</div>

<br/>

<%= link_to 'New Recipe', new_recipe_path %>
